<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rectange">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Tên đề thi"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHeaderName"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Đề thi 1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow >

            <GridLayout
                android:layout_margin="5dp"
                android:columnCount="4"
                android:layout_width="match_parent">

                <TextView
                    android:text="Số câu đúng:"
                    android:textColor="@color/green"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorrectAns"
                    android:text="15"
                    android:textColor="@color/green"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Số câu sai:"
                    android:textColor="@color/green"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtIncorrectAns"
                    android:text="15"
                    android:textColor="@color/green"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Điểm:"
                    android:textColor="@color/red"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtScore"
                    android:text="10"
                    android:textColor="@color/red"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </GridLayout>
            <TextView
                android:id="@+id/txtDeleteTest"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_baseline_delete_24"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="Xoá"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </TableRow>

        <TableRow>

            <GridLayout
                android:columnCount="2"
                android:layout_margin="10dp">

            </GridLayout>

        </TableRow>

    </TableLayout>
</androidx.cardview.widget.CardView>